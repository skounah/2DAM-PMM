<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relative">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pantalla"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#D5D5D5"
        />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/boton1"
        android:layout_below="@+id/pantalla"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/boton4"
        android:layout_below="@+id/boton1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/boton7"
        android:layout_below="@+id/boton4"
        android:layout_alignEnd="@+id/boton4" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/botonc"
        android:layout_below="@+id/boton7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/boton2"
        android:layout_above="@+id/boton5"
        android:layout_toEndOf="@+id/boton1" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/boton3"
        android:layout_alignBottom="@+id/boton2"
        android:layout_toEndOf="@+id/boton2" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/boton5"
        android:layout_above="@+id/boton7"
        android:layout_alignStart="@+id/boton2" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/boton8"
        android:layout_below="@+id/boton5"
        android:layout_toStartOf="@+id/boton6" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/boton0"
        android:layout_below="@+id/boton8"
        android:layout_toStartOf="@+id/boton9" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/boton6"
        android:layout_below="@+id/boton2"
        android:layout_toEndOf="@+id/boton2" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/boton9"
        android:layout_below="@+id/boton6"
        android:layout_alignEnd="@+id/boton3" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/botonigual"
        android:layout_alignBottom="@+id/boton0"
        android:layout_alignEnd="@+id/boton9" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/botonmas"
        android:layout_alignTop="@+id/boton3"
        android:layout_toEndOf="@+id/boton3" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/botonmenos"
        android:layout_below="@+id/boton3"
        android:layout_toEndOf="@+id/boton6" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/botonpor"
        android:layout_below="@+id/boton6"
        android:layout_toEndOf="@+id/boton6" />

    <Button
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/botonentre"
        android:layout_below="@+id/boton9"
        android:layout_toEndOf="@+id/boton9" />


</RelativeLayout>
