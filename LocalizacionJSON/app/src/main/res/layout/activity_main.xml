<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0051b4"
        android:text="INTRODUCE LAS COORDENADAS:"
        android:textSize="18dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:background="#255eb9"
        android:textColor="#fff"
        android:typeface="sans"
        android:text="Obtener Localizacion"
        android:id="@+id/btCalcular"
        android:layout_below="@+id/tvResultado"
        android:layout_alignLeft="@+id/tv0"
        android:layout_alignStart="@+id/tv0"
        android:layout_marginTop="76dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#0d6ebe"
        android:textSize="18sp"
        android:id="@+id/tvResultado"
        android:layout_below="@+id/etLatitud"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplo de coordenadas conocidas:"
        android:textStyle="bold"
        android:id="@+id/tv0"
        android:layout_below="@+id/btCalcular"
        android:layout_alignRight="@+id/etLatitud"
        android:layout_alignEnd="@+id/etLatitud" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IES Serpis: 39.473142, -0.338843"
        android:id="@+id/tv1"
        android:layout_below="@+id/tv0"
        android:layout_alignLeft="@+id/btCalcular"
        android:layout_alignStart="@+id/btCalcular" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLatitud"
        android:inputType="numberDecimal|numberSigned"
        android:gravity="center"
        android:hint="latitud"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/etLongitud"
        android:inputType="numberDecimal|numberSigned"
        android:hint="longitud"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />


</RelativeLayout>
