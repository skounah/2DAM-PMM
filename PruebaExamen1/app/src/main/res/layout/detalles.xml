<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/detalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del Pedido"
        android:textSize="60px"/> !--

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:text="BEBIDA :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.24" />
        <TextView android:id="@+id/bebidaselect"
            android:text="BEBIDA :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:id="@+id/preciobebibdaselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:text="VASO :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.24" />
        <TextView android:id="@+id/vasoselect"
            android:text="VASO :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:id="@+id/preciovasoselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:text="EXTRAS :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.22" />
        <TextView android:id="@+id/extraselect"
            android:text="EXTRAS :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:id="@+id/precioextraselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="TOTAL :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:id="@+id/totalpedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        />


    <TextView android:id="@+id/imagenbebida"
        android:layout_width="match_parent"
        android:layout_height="189dp" />

    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="Volver a Pedido"
        android:id="@+id/textView"
        android:layout_gravity="right" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/botonvolver"
            android:src="@drawable/icono"
            android:layout_gravity="right"
            android:background="#000000" />



</LinearLayout>